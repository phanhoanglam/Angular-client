{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@config/*": [
        "app/configs/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@layouts/*": [
        "app/layouts/*"
      ]
    }
  }
}
